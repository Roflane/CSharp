<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Normal"
        Title="MainWindow" Height="450" Width="800">
  
    <Window.Resources>
        <ContextMenu x:Key="ProcessContextMenu" >
            <MenuItem Header="Kill"
                      Click="Kill_OnClick"
                      CommandParameter="{Binding}"/>
            
            <MenuItem Header="Set Priority">
                <MenuItem Header="Realtime" Click="PriorityRealtime_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                <MenuItem Header="High" Click="PriorityHigh_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                <MenuItem Header="Above Normal" Click="PriorityAboveNormal_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                <MenuItem Header="Normal" Click="PriorityNormal_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                <MenuItem Header="Below Normal" Click="PriorityBelowNormal_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                <MenuItem Header="Idle" Click="PriorityIdle_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            </MenuItem>
            
            <MenuItem Header="Set Affinity">
                <MenuItem Header="CPU 0" Click="AffinityOne_OnClick" 
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
                <MenuItem Header="Full" Click="AffinityFull_OnClick"
                          CommandParameter="{Binding DataContext, RelativeSource={RelativeSource AncestorType=ContextMenu}}"/>
            </MenuItem>
        </ContextMenu>
    </Window.Resources>
    
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="32"
            ResizeBorderThickness="0"
            GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>
    
    <Grid>
        <DockPanel Background="#9E94FF" Height="32" VerticalAlignment="Top">
            <Label Padding="15, 10, 0, 0" Content="Task Manager"/>
        </DockPanel>
        
        <Button Width="40"
                Height="20"
                Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="5"
                WindowChrome.IsHitTestVisibleInChrome="True"
                Click="ButtonClose_OnClick"/>

        <Grid Margin="0,32,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/> 
                <RowDefinition Height="*"/>  
            </Grid.RowDefinitions>

            <DockPanel Background="White" Grid.Row="0">
                <Label Padding="60, 10, 0, 0" Content="Process Name"/>
                <Label Padding="100, 10, 0, 0" Content="PID"/>
            </DockPanel>
        </Grid>
        
        <Grid Margin="0,64,0,0">
            <ListBox x:Name="ProcessListBox" Background="White" IsTextSearchEnabled="True" TextSearch.TextPath="ProcessName">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="ContextMenu" Value="{StaticResource ProcessContextMenu}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Margin="10, 0, 0, 0" Text="{Binding ProcessName}" Width="200"/>
                            <TextBlock Text="{Binding PID}" Width="100"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </Grid>
</Window>