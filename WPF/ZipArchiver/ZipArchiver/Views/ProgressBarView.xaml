<Window x:Class="ZipArchiver.ViewModels.ProgressBarView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ZipArchiver.ViewModels"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="{Binding Count}" Width="300" Height="90">
    <Grid>
        <StackPanel>
            <ProgressBar Height="20" Minimum="0" Maximum="100" Value="{Binding Progress}"/>
            <TextBlock Text="{Binding Progress, StringFormat={}{0}%}" 
                       HorizontalAlignment="Center" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
