<Application x:Class="ZipArchiver.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ZipArchiver"
             xmlns:v="clr-namespace:ZipArchiver.Views"
             xmlns:viewModels="clr-namespace:ZipArchiver.ViewModels"
             xmlns:converters="clr-namespace:ZipArchiver.Converters"
             StartupUri="Views/MainView.xaml">
    <Application.Resources>
        <DataTemplate DataType="{x:Type viewModels:ZipViewModel}">
            <v:ZipView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type viewModels:UnzipViewModel}">
            <v:UnzipView/>
        </DataTemplate>
        <converters:ProgressToBoolConverter x:Key="ProgressToBoolConverter"/>
    </Application.Resources>
</Application>
