<Window x:Class="AppLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppLauncher"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowState="Normal"
        ResizeMode="NoResize"
        Title="MainWindow" Height="450" Width="800">
  
    <WindowChrome.WindowChrome>
        <WindowChrome 
            CaptionHeight="32"
            ResizeBorderThickness="0"
            GlassFrameThickness="0"/>
    </WindowChrome.WindowChrome>

    <Grid>
        
        <DockPanel Background="#F7B5B5" Height="32" VerticalAlignment="Top">
            <Label Content="App Launcher" ></Label>
        </DockPanel>
        
        <Button Width="40" 
                Height="20" 
                Content="X"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="5"
                WindowChrome.IsHitTestVisibleInChrome="True"
                Click="ButtonClose_OnClick"/>
        
        <Button Width="60" Height="30" Content="Start App" Click="ButtonStart_OnClick"></Button>
    </Grid>
    
</Window>
