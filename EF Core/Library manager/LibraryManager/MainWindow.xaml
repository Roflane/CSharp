<Window x:Class="LibraryManager.MainWindow"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LibraryManager" Height="450" Width="800">

    <Window.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="LibraryBackground" Color="#FDF6E3"/> 
        <SolidColorBrush x:Key="LibraryAccent" Color="#8B5E3C"/>
        <SolidColorBrush x:Key="LibraryText" Color="#2E2E2E"/>
        <SolidColorBrush x:Key="LibraryGridHeader" Color="#E8DCC5"/>

        <!-- TextBox Style -->
        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="{StaticResource LibraryText}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="BorderBrush" Value="{StaticResource LibraryAccent}"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          Padding="{TemplateBinding Padding}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- DataGrid Style -->
        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="RowBackground" Value="#FAF3E0"/>
            <Setter Property="AlternatingRowBackground" Value="#F5EAD4"/>
            <Setter Property="Foreground" Value="{StaticResource LibraryText}"/>
            <Setter Property="BorderBrush" Value="{StaticResource LibraryAccent}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <!-- Column Header Style -->
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{StaticResource LibraryGridHeader}"/>
            <Setter Property="Foreground" Value="{StaticResource LibraryText}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Padding" Value="6,3"/>
        </Style>

        <!-- TabItem Style -->
        <Style TargetType="TabItem">
            <Setter Property="Foreground" Value="{StaticResource LibraryAccent}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderBrush" Value="{StaticResource LibraryAccent}"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
        </Style>
    </Window.Resources>

    <Grid Background="{StaticResource LibraryBackground}">
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <TextBox Grid.Row="0" Margin="10"
                 Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                 KeyDown="TextBox_KeyDown"/>
        
        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Books">
                <DataGrid ItemsSource="{Binding FilteredBooks}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                        <DataGridTextColumn Header="ReleaseDate" Binding="{Binding ReleaseDate}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Authors">
                <DataGrid ItemsSource="{Binding FilteredAuthors}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="Name" Binding="{Binding Name}"/>
                        <DataGridTextColumn Header="IsAlive" Binding="{Binding IsAlive}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Readers">
                <DataGrid ItemsSource="{Binding FilteredReaders}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="FavoriteAuthor" Binding="{Binding FavoriteAuthor}"/>
                        <DataGridTextColumn Header="AuthorId" Binding="{Binding AuthorId}"/>
                        <DataGridTextColumn Header="BooksPurchased" Binding="{Binding BooksPurchased}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>

            <TabItem Header="Releases">
                <DataGrid ItemsSource="{Binding FilteredReleases}"
                          AutoGenerateColumns="False"
                          IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Id" Binding="{Binding Id}"/>
                        <DataGridTextColumn Header="AuthorId" Binding="{Binding AuthorId}"/>
                        <DataGridTextColumn Header="Title" Binding="{Binding Title}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
